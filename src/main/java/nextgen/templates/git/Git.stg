delimiters "~","~"

clone(url) ::= <<git clone ~url~  >>

gitignore(excludeDirs,excludeFiles) ::= <<~excludeDirs:{it|/~it~/};separator="\n"~
~excludeFiles:{it|~it~};separator="\n"~  >>

removeDir(dir) ::= <<git rm --cached -r ~dir~ >>

removeFile(path) ::= <<git rm --cached ~path~ >>

eom() ::= "}"

gt() ::= ">"
