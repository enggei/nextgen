	<groupId>~groupId~</groupId>
	<artifactId>~artifactId~</artifactId>
	<version>~version~</version>~if(scope)~
	<scope>~scope;format="toLower"~</scope>~endif~~if(systemPath)~
	<systemPath>~systemPath~</systemPath>
	~endif~
	
</dependency> >>

