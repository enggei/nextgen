delimiters "~","~"

build(testResources,plugin) ::= <<<build>
~if(testResources)~
	<testResources>
		<testResource>
			~testResources:{it|<~it.name~>~it.value~</~it.name~>};separator="\n"~
		</testResource>
	</testResources>
~endif~
	<plugins>
		~plugin:{it|~it~};separator="\n"~
	</plugins>
</build>>>

